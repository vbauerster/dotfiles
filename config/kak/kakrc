# simple Kakoune plugin manager
def plug -params 1..2 %{
    %sh{
        if [[ ! -d $HOME/build/$1 ]]; then
            (cd $HOME/build; git clone https://github.com/$1 2> /dev/null)
        fi
        for file in $(echo $HOME/build/$(basename $1)/$2*.kak); do
            echo source "$file"
        done
    }
}

