{
    "title": "Simultaneous chords",
    "rules": [{
        "description": "df -> app_expose",
        "manipulators": [{
            "type": "basic",
            "from": {
                "simultaneous": [{
                        "key_code": "d"
                    },
                    {
                        "key_code": "f"
                    }
                ],
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [{
                "key_code": "down_arrow",
                "modifiers": [
                    "left_control"
                ]
            }]
        }]
    }, {
        "description": "af -> mission_control",
        "manipulators": [{
            "type": "basic",
            "from": {
                "simultaneous": [{
                        "key_code": "a"
                    },
                    {
                        "key_code": "f"
                    }
                ],
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [{
                "key_code": "mission_control"
            }]
        }]
    }, {
        "description": "fj -> lang_switch",
        "manipulators": [{
            "type": "basic",
            "from": {
                "simultaneous": [{
                        "key_code": "f"
                    },
                    {
                        "key_code": "j"
                    }
                ],
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [{
                "key_code": "spacebar",
                "modifiers": [
                    "left_command"
                ]
            }]
        }]
    }]
}
