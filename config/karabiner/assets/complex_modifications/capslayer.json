{
    "title": "Caps is Hyper{ctrl, alt, cmd}, if alone Esc",
    "rules": [{
            "description": "Hyper mod ['l', ',', 'u', 'r', 'b', 'f', 'h', 'k']",
            "manipulators": [{
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "control",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [{
                        "set_variable": {
                            "name": "caps_hold_mode",
                            "value": 1
                        }
                    }],
                    "to_if_alone": [{
                        "key_code": "escape"
                    }],
                    "to_after_key_up": [{
                        "set_variable": {
                            "name": "caps_hold_mode",
                            "value": 0
                        }
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "u"
                    },
                    "to": [{
                        "key_code": "u",
                        "modifiers": [
                            "right_command",
                            "right_control",
                            "right_option"
                        ]
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                },
                {
                    "type": "basic",
