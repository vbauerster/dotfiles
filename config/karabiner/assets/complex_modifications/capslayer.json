{
    "title": "Caps is Hyper{ctrl, alt, cmd}, if alone Esc",
    "rules": [{
            "description": "Hyper mod ['l', ',', 'u', 'r', 'b', 'f']",
            "manipulators": [{
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "control",
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [{
                        "set_variable": {
                            "name": "caps_hold_mode",
                            "value": 1
                        }
                    }],
                    "to_if_alone": [{
                        "key_code": "escape"
                    }],
                    "to_after_key_up": [{
                        "set_variable": {
                            "name": "caps_hold_mode",
                            "value": 0
                        }
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "u"
                    },
                    "to": [{
                        "key_code": "u",
                        "modifiers": [
                            "left_command",
                            "left_control",
                            "left_option"
                        ]
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "r"
                    },
                    "to": [{
                        "key_code": "r",
                        "modifiers": [
                            "left_command",
                            "left_control",
                            "left_option"
                        ]
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l"
                    },
                    "to": [{
                        "key_code": "l",
                        "modifiers": [
                            "left_command",
                            "left_control",
                            "left_option"
                        ]
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "b"
                    },
                    "to": [{
                        "key_code": "b",
                        "modifiers": [
                            "left_command",
                            "left_control",
                            "left_option"
                        ]
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f"
                    },
                    "to": [{
                        "key_code": "f",
                        "modifiers": [
                            "left_command",
                            "left_control",
                            "left_option"
                        ]
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "comma"
                    },
                    "to": [{
                        "key_code": "comma",
                        "modifiers": [
                            "left_command",
                            "left_control",
                            "left_option"
                        ]
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                }
            ]
        },
        {
            "description": "Hyper bind ['spacebar:backslash']",
            "manipulators": [{
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar"
                    },
                    "to": [{
                        "key_code": "backslash"
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                }
            ]
        },
        {
            "description": "Hyper bind ['j:delete_or_backspace']",
            "manipulators": [{
                    "type": "basic",
                    "from": {
                        "key_code": "j"
                    },
                    "to": [{
                        "key_code": "delete_or_backspace"
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                }
            ]
        },
        {
            "description": "Hyper bind ['h:tab']",
            "manipulators": [{
                    "type": "basic",
                    "from": {
                        "key_code": "h"
                    },
                    "to": [{
                        "key_code": "tab"
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                }
            ]
        },
        {
            "description": "Hyper bind ['m:return_or_enter']",
            "manipulators": [{
                    "type": "basic",
                    "from": {
                        "key_code": "m"
                    },
                    "to": [{
                        "key_code": "return_or_enter"
                    }],
                    "conditions": [{
                        "type": "variable_if",
                        "name": "caps_hold_mode",
                        "value": 1
                    }]
                }
            ]
        }
    ]
}
